{
  "manifest_version": 3,
  "name": "抖音作品批量删除助手",
  "version": "1.0.0",
  "description": "在创作者中心批量选择并删除抖音作品",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://creator.douyin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://creator.douyin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
